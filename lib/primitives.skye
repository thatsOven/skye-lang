namespace core {
    namespace utils {
        fn __reversedIntToString[T: AnyInt](value: T) DefaultMutableString {
            let neg = value < 0;
            if (neg) value = -value;

            let buf = DefaultMutableString::new();

            do {
                buf.push(@cast(char, 48 + value % 10));
                value /= 10;
            } while value;

            if (neg) buf.push('-');
            return buf;
        }

        fn intToString[T: AnyInt](value: T) DefaultMutableString {
            let buf = core::utils::__reversedIntToString(value);
            buf.reverse();
            return buf;
        }

        fn floatToString[T: AnyFloat](value: T, decPrecision: usz) DefaultMutableString {
            if decPrecision < 0 {
                panic("core::utils::floatToString: Negative precision");
            }

            let intPart = @cast(i64, value);
            let decPart = value - @cast(T, intPart);

            let buf = core::utils::intToString(intPart);

            if decPrecision != 0 {
                buf.push('.');

                decPart *= @cast(T, pow(10f64, @cast(f64, decPrecision)));
                let tmpBuf = core::utils::__reversedIntToString(decPart);
                
                while tmpBuf.length < decPrecision {
                    tmpBuf.push('0');
                }

                tmpBuf.reverse();
                buf.pushString(tmpBuf.toString());
            }

            return buf;
        }
    }
}

fn _SKYE_INIT() {
    core::mem::heapAllocator = core::mem::HeapAllocator::new();
}

fn _SKYE_CONVERT_ARGS(const argc: usz, const argv: **char) core::Array[core::String] {
    let output = core::Array::withCapacity[core::String](argc);

    for let i = 0usz; i < argc; i++ {
        output.push(core::String.{ 
            raw: @cast(rawstring, argv[i]), 
            length: core::utils::cStringLength(@cast(rawstring, argv[i])) 
        });
    }

    return output;
}