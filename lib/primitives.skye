            }
        }

        fn __subscript__(self, idx: usz) *char {
            if idx < self.length {
                return self.array[idx];
            } else {
                panic("MutableString: out of bounds access");
            }
        }

        fn slice(const self, a: usz, b: usz) core::Slice[char] {
            if a < self.length && b < self.length {
                return core::Slice::new(self.array.ptr + a, b - a);
            } else {
                panic("MutableString: out of bounds slicing");
            }
        }

        fn reverse(self) {
            let a = 0usz;
            let b = self.length - 1;
            
            while a < b {
                let tmp       = self.array[a];
                self.array[a] = self.array[b];
                self.array[b] = tmp;

                a++;
